@*@model  IEnumerable<BookStore.Entities.Book>*@
@model IEnumerable<BookStore.Entities.ViewModel.BookViewModel>

@{
    ViewBag.Title = "Index";

}

 <h2 style="color:#867fb1">BooksList</h2>
<br />
<br />



<div class="text-center"> 
    <span style="color:#867fb1" >Search by name: </span>
    <input id="SearchString" name="SearchString"  type="text"  value="" /> 
    <input type="submit" class="btn btn-default" value="Search" id="btnSearch" /> 
</div>

<br />
<br />

<div id="ProductList">
   @Html.Partial("IndexPartial",Model)
</div>       

<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listitem">
        <div class="item active">
            <img src="~/Images/ImgSlide/book_PNG2115.png" />
        </div>

        <div class="item">
            <img src="~/Images/ImgSlide/book_PNG2116.png" />
        </div>

        <div class="item">
            <img src="~/Images/ImgSlide/book_PNG2121.png" />
        </div>

        <div class="item">
            <img src="~/Images/ImgSlide/book_PNG2115.png" />
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>

    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>




