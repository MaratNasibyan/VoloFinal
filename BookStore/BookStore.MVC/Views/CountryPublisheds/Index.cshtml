@model IEnumerable<BookStore.Entities.CountryViewModel.CountryViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Country Published</h2>
<br />
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<br />
<table class="table-responsive">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CountryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsoCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneCode)
            </th>
            <th></th>
        </tr>
    </thead>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CountryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsoCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneCode)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id })         
            @*@Html.ActionLink("Delete", "Delete", new { id=item.Id })*@
        </td>
    </tr>
}

</table>
<style>
    thead {
        background-color: #f5f5f5;
    }

    td, th {
        text-align: center;
        border-bottom: 1px solid #ddd;
    }

    table {
        border-collapse: collapse;
        width: 100%;
        border: solid 1px #ddd;
    }

    th {
        height: 50px;
    }

    tr:hover {
        background-color: #f5f5f5;
    }
    table
    {
        margin-bottom:25%;
    }
</style>